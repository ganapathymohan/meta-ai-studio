<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- â”€â”€ WebView wrapped in SwipeRefreshLayout â”€â”€ -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- â”€â”€ Search Bar Container â”€â”€ -->
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="top"
        android:background="#DD000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        android:elevation="8dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Search videos/text..."
            android:textColor="#FFFFFF"
            android:textColorHint="#99FFFFFF"
            android:background="@null"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true" />

        <Button
            android:id="@+id/closeSearchButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="âœ•"
            android:textColor="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

    <!-- â”€â”€ Top Progress Bar â”€â”€ -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="top"
        android:max="100"
        android:progressTint="@color/accent_blue"
        android:progressBackgroundTint="@color/background"
        android:visibility="gone" />

    <!-- â”€â”€ No Internet Overlay â”€â”€ -->
    <LinearLayout
        android:id="@+id/noInternetView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/background"
        android:padding="32dp"
        android:visibility="gone">

        <!-- Signal icon (Unicode emoji fallback) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¡"
            android:textSize="72sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="No Internet Connection"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Please check your connection\nand try again."
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.4" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:layout_marginTop="36dp"
            android:text="Retry"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="@color/accent_blue"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

    <Button
        android:id="@+id/searchFab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="ðŸ”"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/accent_blue"
        android:elevation="6dp"
        style="@style/Widget.MaterialComponents.Button" />

</FrameLayout>
